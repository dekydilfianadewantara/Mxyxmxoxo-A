<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="REGISTRATION"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect failed"/>
        <Button
            android:id="@+id/b_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            />
    </LinearLayout>
    <ScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Username" />

            <EditText
                android:id="@+id/et_username"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_row="0"
                android:background="@drawable/edittext_bid"
                android:gravity="center"
                android:padding="5dp" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Password" />

            <EditText
                android:id="@+id/et_password"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:background="@drawable/edittext_bid"
                android:gravity="center"
                android:inputType="textPassword"
                android:padding="5dp" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="2"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Email" />

            <EditText
                android:id="@+id/et_email"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="2"
                android:background="@drawable/edittext_bid"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:padding="5dp" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="3"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Phone" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="3"
                android:background="@drawable/edittext_bid"
                android:gravity="center"
                android:inputType="phone"
                android:padding="5dp" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="4"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Address/ Location" />

            <EditText
                android:id="@+id/et_address"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="4"
                android:background="@drawable/edittext_bid"
                android:gravity="center"
                android:inputType="textPostalAddress"
                android:padding="5dp" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="5"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Vehicles" />

            <Spinner
                android:id="@+id/spin_vehicles"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="5"
                android:background="@drawable/edittext_bid"
                android:gravity="center"
                android:padding="5dp" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="6"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Charge/km" />

            <EditText
                android:id="@+id/et_charge"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="6"
                android:background="@drawable/edittext_bid"
                android:gravity="center"
                android:inputType="numberSigned"
                android:padding="5dp" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="7"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Payment Method" />

            <Spinner
                android:id="@+id/spin_payment"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="7"
                android:background="@drawable/edittext_bid"
                android:gravity="center"
                android:padding="5dp" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="8"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Start Time Available" />

            <EditText
                android:id="@+id/et_time_start"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="8"
                android:background="@drawable/edittext_bid"
                android:gravity="center"
                android:inputType="time"
                android:padding="5dp" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="9"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="End Time Available" />

            <EditText
                android:id="@+id/et_time_end"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="9"
                android:background="@drawable/edittext_bid"
                android:gravity="center"
                android:inputType="time"
                android:padding="5dp" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="10"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Image" />

            <Button
                android:id="@+id/btnSelectPhoto"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="10"
                android:text="Select Photo"
                android:gravity="center"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="11"
                android:text="Select Photo"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_photo"/>

        </GridLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/registerBtn2"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/register" />

</LinearLayout>